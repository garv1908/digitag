{
  "canisters": {
    "marketplace_backend": {
      "type": "motoko",
      "main": "src/backend/main.mo"
    },
    "marketplace_frontend": {
      "dependencies": ["marketplace_backend"],
      "frontend": {
        "entrypoint": "src/frontend/index.html"
      },
      "source": ["dist/"],
      "type": "assets"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://mainnet.dfinity.network"],
      "type": "persistent"
    }
  },
  "version": 1
}
